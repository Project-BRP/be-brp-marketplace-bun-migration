{
  "name": "be-brp-marketplace",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "prepare": "husky",
    "test": "cross-env NODE_ENV=testing bun test --detect-open-handles",
    "dev": "cross-env NODE_ENV=development bun --watch src/index.ts",
    "build": "bunx tsc",
    "start:kafka": "bun dist/kafka/index.js",
    "lint": "bunx eslint --fix",
    "format": "bunx prettier --write src/**/*.ts",
    "deploy:test": "docker-compose --env-file .env.testing -f docker-compose.test.yml up -d --build",
    "deploy:dev": "docker-compose --env-file .env.development -f docker-compose.dev.yml up -d --build",
    "deploy:prod": "docker-compose --env-file .env.production -f docker-compose.prod.yml up -d --build",
    "undeploy:test": "docker-compose --env-file .env.testing -f docker-compose.test.yml down",
    "undeploy:dev": "docker-compose --env-file .env.development -f docker-compose.dev.yml down",
    "undeploy:prod": "docker-compose --env-file .env.production -f docker-compose.prod.yml down",
    "migrate:test": "dotenv -e .env.testing -- bunx prisma migrate dev",
    "migrate:dev": "dotenv -e .env.development -- bunx prisma migrate dev",
    "migrate:prod": "dotenv -e .env.production -- bunx prisma migrate deploy",
    "generate:prisma": "bunx prisma generate",
    "seed:all:test": "dotenv -e .env.testing -- bun prisma/seeders/index.ts all",
    "seed:users:test": "dotenv -e .env.testing -- bun prisma/seeders/index.ts users",
    "seed:product-types:test": "dotenv -e .env.testing -- bun prisma/seeders/index.ts productTypes",
    "seed:chats:test": "dotenv -e .env.testing -- bun prisma/seeders/index.ts chats",
    "seed:all": "dotenv -e .env.development -- bun prisma/seeders/index.ts all",
    "seed:users": "dotenv -e .env.development -- bun prisma/seeders/index.ts users",
    "seed:product-types": "dotenv -e .env.development -- bun prisma/seeders/index.ts productTypes",
    "seed:chats": "dotenv -e .env.development -- bun prisma/seeders/index.ts chats",
    "start:test": "cross-env NODE_ENV=testing bun dist/index.js",
    "start:dev": "cross-env NODE_ENV=development bun dist/index.js",
    "start:prod": "cross-env NODE_ENV=production bun dist/index.js"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format",
      "npm run lint"
    ]
  },
  "author": "yuta",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@hono/zod-validator": "^0.2.0",
    "@prisma/client": "^5.22.0",
    "@socket.io/bun-engine": "^0.0.2",
    "@types/archiver": "^6.0.3",
    "@types/bun": "^1.2.21",
    "@types/csv-stringify": "^1.4.3",
    "@types/jszip": "^3.4.1",
    "archiver": "^7.0.1",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "cookie": "^1.0.2",
    "csv-stringify": "^6.6.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^10.0.0",
    "hono": "^4.4.7",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "kafkajs": "^2.2.4",
    "luxon": "^3.7.1",
    "multer": "1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "pdfkit": "^0.17.1",
    "redis": "^4.7.0",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/eslintrc": "^3.2.0",
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie": "^0.6.0",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/kafkajs": "^1.8.2",
    "@types/luxon": "^3.7.1",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.17",
    "@types/nodemon": "^1.19.6",
    "@types/pdfkit": "^0.17.2",
    "@types/redis": "^4.0.10",
    "@types/sharp": "^0.31.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-import-helpers": "^2.0.1",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0",
    "typescript": "^5.7.2"
  }
}